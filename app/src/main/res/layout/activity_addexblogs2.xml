<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddExBlogS2">

    <TextView
        android:id="@+id/title_addexblogs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_addexblogs2"
        android:textSize="40sp"
        android:textAlignment="viewEnd"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_addexblogs2"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/api_select_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/auth_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/eglooOAuthButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="@string/egloosOAuth_addexblogs2"
            android:textSize="18sp"
            android:visibility="gone"
            android:onClick="gotoMetaWeBlogEgloosForm"/>

        <Button
            android:id="@+id/tisOAuthButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tistoryOAuth_addexblogs2"
            android:textSize="18sp"
            android:visibility="gone"
            android:onClick="gotoTistoryOAuthWeb"/>

        <Button
            android:id="@+id/mwbAuthButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MWBlogAuth_addexblogs2"
            android:textSize="18sp"
            android:visibility="gone"
            android:onClick="gotoMWBlogAuthForm"/>
    </FrameLayout>

</LinearLayout>